{
    "name": "template-asset-bundling",
    "scripts": {
        "predev": "npm run clean",
        "dev": "parcel watch --dist-dir ./public/assets/css/ assets/**/*",
        "prebuild": "npm run clean",
        "build": "parcel build --no-source-maps --dist-dir ./public/assets/css/ assets/**/*",
        "clean": "rm -rf ./public/assets/css"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.4.14",
        "parcel": "^2.9.3",
        "postcss": "^8.4.27",
        "tailwindcss": "^3.3.3"
    },
    "dependencies": {
        "tw-elements": "^1.0.0-beta3"
    }
}
